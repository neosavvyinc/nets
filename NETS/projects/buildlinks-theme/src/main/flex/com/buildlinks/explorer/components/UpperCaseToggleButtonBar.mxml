<?xml version="1.0" encoding="utf-8"?>
<mx:ToggleButtonBar xmlns:mx="http://www.adobe.com/2006/mxml" labelFunction="labelFunc">
	<mx:Script>
		<![CDATA[
			import mx.core.Container;
			
			private function labelFunc(item:Container):String {
				return item[this.labelField].toUpperCase();
			}
		]]>
	</mx:Script>
</mx:ToggleButtonBar>

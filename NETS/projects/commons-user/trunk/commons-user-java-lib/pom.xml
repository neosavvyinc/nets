<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.neosavvy.commons.user</groupId>
		<artifactId>maven-flex-webapp-commons-user-toplevel</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.neosavvy.commons.user</groupId>
	<artifactId>commons-user-java-lib</artifactId>
	<packaging>jar</packaging>
	<name>commons-user-java-lib</name>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes />
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>maven-hsqldb-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
              		<dbName>test</dbName>
              		<mode>server</mode>
              		<silent>true</silent>
              		<trace>false</trace>
              		<isTransient>false</isTransient>
              	</configuration>
                <executions>
                    <execution>
                        <phase>test</phase>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>


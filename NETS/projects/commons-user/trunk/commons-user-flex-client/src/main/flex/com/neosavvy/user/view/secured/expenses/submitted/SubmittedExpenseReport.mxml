<?xml version="1.0"?>
<mx:Panel
    xmlns:mx="http://www.adobe.com/2006/mxml"
    width="100%"
    height="100%" 
    styleName="paddedContainer"
    horizontalAlign="right"
    title="View Submitted Expense Reports">

    <mx:AdvancedDataGrid id="submittedExpenseGrid" width="100%" height="100%">
        <mx:columns>
            <mx:AdvancedDataGridColumn
                id="voucherNumberColumn"
                headerText="Voucher Number"
                dataField="id"/>
            <mx:AdvancedDataGridColumn
                id="amountNumberColumn"
                headerText="Expense Amount"
                dataField="totalExpenseAmount"/>
            <mx:AdvancedDataGridColumn
                id="amountToReimburseColumn"
                headerText="Amount to Reimburse"
                dataField="totalReimbursableExpenseAmount"/>
            <mx:AdvancedDataGridColumn
                id="statusColumn"
                headerText="Status"
                dataField="status"/>
            <mx:AdvancedDataGridColumn
                id="actionColumn"
                headerText="Actions"
                itemRenderer="com.neosavvy.user.view.secured.expenses.submitted.Actions"/>
        </mx:columns>
    </mx:AdvancedDataGrid>    
    
</mx:Panel>

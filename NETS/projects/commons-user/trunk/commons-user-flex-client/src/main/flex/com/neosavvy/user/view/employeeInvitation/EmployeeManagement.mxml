<?xml version="1.0"?>
<mx:VBox
        xmlns:mx="http://www.adobe.com/2006/mxml"
        xmlns:flexlib="http://code.google.com/p/flexlib/"
        xmlns:controls="controls.*"
        >


    <mx:Panel title="Queue Employees to be invited here" styleName="paddedContainer" width="100%" height="100%">
        <mx:HBox width="100%">
            <flexlib:PromptingTextInput id="empFName" prompt="First Name" width="100%"/>
            <flexlib:PromptingTextInput id="empLName" prompt="Last Name" width="100%"/>
            <flexlib:PromptingTextInput id="empEmail" prompt="Email" width="100%"/>
            <mx:Button id="queueEmployee" label="Queue User"/>
        </mx:HBox>
        <mx:AdvancedDataGrid
                id="employeesQueuedToInvite"
                width="100%"
                height="100%"
                >
            <mx:columns>
                <mx:AdvancedDataGridColumn
                        id="firstNameCol"
                        dataField="firstName"
                        headerText="First Name"
                        />
                <mx:AdvancedDataGridColumn
                        id="lastNameCol"
                        dataField="lastName"
                        headerText="Last Name"
                        />
                <mx:AdvancedDataGridColumn
                        id="emailCol"
                        dataField="email"
                        headerText="Email"
                        />
            </mx:columns>
        </mx:AdvancedDataGrid>
        <mx:HBox width="100%">
            <mx:Button id="requestQueueToBeProcessed" label="Process Invitations"/>
            <mx:Spacer width="100%"/>
            <controls:Spinner id="queuingSpinner" tickColor="#66aaff" creationComplete="{queuingSpinner.play()}"/>
        </mx:HBox>
    </mx:Panel>

</mx:VBox>

<?xml version="1.0" ?>
<mx:Panel
        xmlns:mx="http://www.adobe.com/2006/mxml"
        xmlns:code="http://code.google.com/p/flexlib/"
        styleName="grayToGrayViewContainer"
        layout="vertical"
        width="330"
        verticalGap="0"
        paddingLeft="0"
        paddingRight="0"
        paddingTop="0"
        paddingBottom="0"
        horizontalScrollPolicy="off"
        verticalScrollPolicy="off"
        >

    <mx:HBox
            width="100%"
            paddingLeft="10"
            paddingRight="10"
            paddingTop="10"
            paddingBottom="10"
            styleName="formWindow"
            horizontalScrollPolicy="off"
            verticalScrollPolicy="off">
        <mx:Image source="@Embed(source='com/neosavvy/nets/theme/icons/Icon_48_lock.png')"/>
        <mx:VBox horizontalScrollPolicy="off" verticalScrollPolicy="off">
            <mx:Label styleName="secondaryTitle" text="Reset your password"/>
            <mx:Text styleName="bodyText" width="200" text="Provide your username below and the system will send your new password to your email address on file."/>
        </mx:VBox>
    </mx:HBox>
    <mx:VBox
            styleName="formSectionContainer"
            horizontalAlign="right"
            width="100%">
        <code:PromptingTextInput prompt="Company Name" automationName="Username" id="companyName" width="100%"/>
        <code:PromptingTextInput prompt="Username" automationName="userName" id="userName" width="100%"/>
        <code:PromptingTextInput prompt="password" automationName="Username" id="password" width="100%"/>
        <code:PromptingTextInput prompt="confirmPassword" automationName="Username" id="confirmPassword" width="100%"/>
        <mx:Button
                id="registerCompany"
                width="100%"
                styleName="orangeLargeButton"
                label="Register"/>
    </mx:VBox>

</mx:Panel>
<?xml version="1.0" ?>
<mx:Panel
        xmlns:mx="http://www.adobe.com/2006/mxml"
        xmlns:code="http://code.google.com/p/flexlib/"
        styleName="grayToGrayViewContainer"
        layout="vertical"
        width="400"
        verticalGap="0"
        paddingLeft="0"
        paddingRight="0"
        paddingTop="0"
        paddingBottom="0"
        horizontalScrollPolicy="off"
        verticalScrollPolicy="off"
        >

    <mx:HBox
            width="100%"
            paddingLeft="10"
            paddingRight="10"
            paddingTop="10"
            paddingBottom="10"
            styleName="formWindow"
            horizontalScrollPolicy="off"
            verticalScrollPolicy="off">
        <mx:Image source="@Embed(source='../../../../../../../../../../nets-theme/src/main/resources/com/neosavvy/nets/theme/icons/Icon_48_signup.png')"/>
        <mx:VBox horizontalScrollPolicy="off" verticalScrollPolicy="off">
            <mx:Label styleName="secondaryTitle" text="Register Your Company, It's Simple"/>
            <mx:Text styleName="bodyText" width="300" text="Just provide your company name, email address, and desired username."/>
        </mx:VBox>
    </mx:HBox>
    <mx:VBox
            styleName="formSectionContainer"
            horizontalAlign="right"
            width="100%">
        <code:PromptingTextInput prompt="Company Name" id="companyName" width="100%"/>
        <code:PromptingTextInput prompt="Email Address" id="emailAddress" width="100%"/>
        <code:PromptingTextInput prompt="Username" id="username" width="100%"/>
        <mx:Button
                id="registerCompany"
                width="100%"
                styleName="orangeLargeButton"
                label="Register"/>
    </mx:VBox>

</mx:Panel>
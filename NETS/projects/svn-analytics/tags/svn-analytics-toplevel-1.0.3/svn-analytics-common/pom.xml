<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>
		<artifactId>svn-analytics-toplevel</artifactId>
		<groupId>com.neosavvy.svn.analytics</groupId>
		<version>1.0.3</version>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.neosavvy.svn.analytics</groupId>
	<artifactId>svn-analytics-common</artifactId>
	<name>svn-analytics-common</name>
	<packaging>swc</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>${flexmojos.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<includeJavaClasses>
								<includeClass>com.neosavvy.svn.analytics.dto.Author</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.HistoricalTeamStatistic</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.OverallTeamStatistic</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.SVNRepositoryInterval</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.request.RefineSearchRequest</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.request.CodeOwnershipRefineRequest</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.SVNRepositoryDTO</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.file.DirectoryNode</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.file.FileNode</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.file.FileSystemNode</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.CodeOwnershipDTO</includeClass>
							</includeJavaClasses>
							<beanTemplate>
								<template>${basedir}/src/main/template/beanBase.gsp
								</template>
								<template>${basedir}/src/main/template/bean.gsp
								</template>
							</beanTemplate>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<debug>true</debug>
					<licenses>
						<flexbuilder3>137740010346360127756383</flexbuilder3>
					</licenses>
					<locales>
						<param>en_US</param>
					</locales>
                    <sourcePaths>
                        <path>${basedir}/src/main/flex</path>
                        <path>${basedir}/src/main/resources</path>
                        <path>${basedir}/target/generated-sources/flexmojos</path>
                    </sourcePaths>
                    <configurationReport>true</configurationReport>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.adobe.flex</groupId>
						<artifactId>compiler</artifactId>
						<version>${flex.version}</version>
						<type>pom</type>
					</dependency>
					<dependency>
						<groupId>com.adobe.flex.license</groupId>
						<artifactId>license-flexbuilder-pro-roundarch</artifactId>
						<version>${flex.version}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.neosavvy.svn.analytics
			</groupId>
			<artifactId>svn-analytics</artifactId>
			<version>1.0.3</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>flex-framework</artifactId>
			<version>${flex.version}</version>
			<type>pom</type>
		</dependency>

		<dependency>
			<groupId>org.puremvc.as3</groupId>
			<artifactId>PureMVC</artifactId>
			<version>2.0.4</version>
			<type>swc</type>
		</dependency>

	</dependencies>
</project>

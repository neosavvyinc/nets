<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>svn-analytics-toplevel</artifactId>
		<groupId>com.neosavvy.svn.analytics
		</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.neosavvy.svn.analytics</groupId>
	<artifactId>svn-analytics-common</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>svn-analytics-common</name>
	<url>http://neosavvy.com</url>
	<packaging>swc</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin
				</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<includeJavaClasses>
								<includeClass>com.neosavvy.svn.analytics.dto.Author
								</includeClass>
								<includeClass>
									com.neosavvy.svn.analytics.dto.HistoricalTeamStatistic
								</includeClass>
								<includeClass>
									com.neosavvy.svn.analytics.dto.OverallTeamStatistic
								</includeClass>
								<includeClass>
									com.neosavvy.svn.analytics.dto.SVNRepositoryInterval
								</includeClass>
								<includeClass>
									com.neosavvy.svn.analytics.dto.request.RefineSearchRequest
								</includeClass>
							</includeJavaClasses>
							<beanTemplate>
								<template>${basedir}/src/main/template/beanBase.gsp
								</template>
								<template>${basedir}/src/main/template/bean.gsp
								</template>
							</beanTemplate>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<debug>true</debug>
					<licenses>
						<!-- Windows -->
						<!--<flexbuilder3>1377-4008-6804-0543-0443-9238</flexbuilder3>-->
						<!-- Mac OS X -->
						<charts>1377-4001-0346-3601-2775-6383
						</charts>
					</licenses>
					<locales>
						<param>en_US</param>
					</locales>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.adobe.flex.license</groupId>
						<artifactId>license</artifactId>
						<version>3.0.0.477</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.neosavvy.svn.analytics
			</groupId>
			<artifactId>svn-analytics</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.puremvc.as3</groupId>
			<artifactId>PureMVC</artifactId>
			<version>2.0.4</version>
			<type>swc</type>
		</dependency>

		<dependency>
			<groupId>com.adobe.flex.sdk</groupId>
			<artifactId>datavisualization</artifactId>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.adobe.flex.sdk</groupId>
			<artifactId>datavisualization</artifactId>
			<classifier>en_US</classifier>
			<type>swc</type>
		</dependency>
	</dependencies>
</project>
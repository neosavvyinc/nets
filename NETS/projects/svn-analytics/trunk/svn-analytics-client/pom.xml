<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>svn-analytics-toplevel</artifactId>
		<groupId>com.neosavvy.svn.analytics</groupId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<groupId>com.neosavvy.svn.analytics</groupId>
	<artifactId>svn-analytics-client</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>SVN Analytics Client</name>
	<url>http://neosavvy.com</url>
	<packaging>swf</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<includeJavaClasses>
								<includeClass>com.neosavvy.svn.analytics.dto.Author</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.HistoricalTeamStatistic</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.OverallTeamStatistic</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.SVNRepositoryInterval</includeClass>
								<includeClass>com.neosavvy.svn.analytics.dto.request.RefineSearchRequest</includeClass>
							</includeJavaClasses>
							<beanTemplate>
								<template>${basedir}/src/main/template/beanBase.gsp</template>
								<template>${basedir}/src/main/template/bean.gsp</template>
							</beanTemplate>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<debug>true</debug>
					<licenses>
						<!-- Windows -->
						<!--<flexbuilder3>1377-4008-6804-0543-0443-9238</flexbuilder3>-->
						<!-- Mac OS X -->
						<charts>1377-4001-0346-3601-2775-6383</charts>
					</licenses>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.adobe.flex.license</groupId>
						<artifactId>license</artifactId>
						<version>3.0.0.477</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>info.flex-mojos</groupId>
				<artifactId>html-wrapper-mojo</artifactId>
				<version>2.0.3</version>
				<executions>
					<execution>
						<goals>
							<goal>wrapper</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.adobe.flex.sdk</groupId>
			<artifactId>datavisualization</artifactId>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.adobe.flex.sdk</groupId>
			<artifactId>datavisualization</artifactId>
			<classifier>en_US</classifier>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.neosavvy.svn.analytics</groupId>
			<artifactId>svn-analytics</artifactId>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.adobe.blazeds</groupId>
			<artifactId>blazeds-remoting</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.adobe.blazeds</groupId>
			<artifactId>blazeds-common</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.adobe.blazeds</groupId>
			<artifactId>blazeds-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.adobe.blazeds</groupId>
			<artifactId>blazeds-proxy</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.j2ee</groupId>
			<artifactId>j2ee</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.jmx</groupId>
			<artifactId>jmxri</artifactId>
			<version>1.2.1</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

</project>

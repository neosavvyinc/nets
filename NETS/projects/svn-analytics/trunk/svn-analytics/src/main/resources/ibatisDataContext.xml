<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<tx:annotation-driven/>

	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="localOracleDataSource"/>	
	</bean>

    <bean id="sqlMapClientTarget" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:sql-map-config.xml"/>
        <property name="dataSource" ref="localOracleDataSource"/>
    </bean>

    <bean id="sqlMapClient" class="org.springframework.aop.framework.ProxyFactoryBean">
      <property name="proxyInterfaces" value="com.ibatis.sqlmap.client.SqlMapClient"/>
      <property name="target" ref="sqlMapClientTarget"/>
      <property name="interceptorNames">
        <list>
          <value>sqlMapClientLoggerAdvisor</value>
        </list>
      </property>
    </bean>
    
    <bean id="sqlMapClientLoggerAdvisor" class="org.springframework.aop.support.NameMatchMethodPointcutAdvisor">
      <property name="mappedName" value="queryFor*"/>
      <property name="advice" ref="sqlMapClientLogger"/>
    </bean>
    
    <bean id="sqlMapClientLogger" class="com.neosavvy.util.SqlMapClientLoggerAdvice">
      <property name="sqlContextHolder" ref="sqlContextHolder"/>
    </bean>
    
    <bean id="sqlContextHolder" class="com.neosavvy.util.DefaultSqlContextHolder" scope="request">
      <aop:scoped-proxy proxy-target-class="false"/>
    </bean>
    
    <bean id="abstractDao" abstract="true" class="org.springframework.orm.ibatis.support.SqlMapClientDaoSupport">
	    <property name="sqlMapClient" ref="sqlMapClient"/>
	</bean>    
    <bean parent="abstractDao" id="svnAnalyticsDAO" class="com.neosavvy.svn.analytics.dao.ibatis.IbatisSVNStatisticDAOImpl"/>
    <bean parent="abstractDao" id="svnRepositoryDAO" class="com.neosavvy.svn.analytics.dao.ibatis.IbatisSVNRepositoryDAOImpl"/>

</beans>